<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
		<message-bundle>br.com.sitedoph.uniph.Messages</message-bundle>

		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>

	<lifecycle>
		<phase-listener>br.com.sitedoph.uniph.aplicacao.listeners.AutorizadorListener</phase-listener>
	</lifecycle>
	
	<converter>
		<description>Configurando converter para PickList</description>
		<converter-id>pickListConverter</converter-id>
		<converter-class> br.com.sitedoph.uniph.aplicacao.util.PickListConverter</converter-class>
	</converter>
	
	<!-- Login -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Alunos -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>alunos</from-outcome>
			<to-view-id>pages/aluno.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Disciplinas -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>disciplinas</from-outcome>
			<to-view-id>pages/disciplina.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Professores -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>professores</from-outcome>
			<to-view-id>pages/professor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Turmas -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>turmas</from-outcome>
			<to-view-id>pages/turma.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- UsuÃ¡rios -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>usuarios</from-outcome>
			<to-view-id>pages/usuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>